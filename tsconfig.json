{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "#api/*":["./src/api/*"],
      "#types":["./src/types"],
      "#utils":["./src/utils"],
      "#jest-mocks": ["./mocks"],
    }
  },
  "include": [
    "src",
    "package.json",
    "jest.config.ts"
  ],
}
